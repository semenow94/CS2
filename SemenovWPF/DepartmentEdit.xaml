<Window x:Class="SemenovWPF.DepartmentEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SemenovWPF"
        mc:Ignorable="d"
        Title="DepartmentEdit" Height="75" Width="800">
    <Grid>
        <TextBlock x:Name="DepId" HorizontalAlignment="Left" Margin="29,390,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Visibility="Hidden"/>
        <TextBox x:Name="DepName" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="DepEdit" Content="Button" HorizontalAlignment="Left" Margin="259,10,0,0" VerticalAlignment="Top" Width="75" Click="DepEdit_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="339,10,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.126,0.468" Click="Button_Click"/>

    </Grid>
</Window>
